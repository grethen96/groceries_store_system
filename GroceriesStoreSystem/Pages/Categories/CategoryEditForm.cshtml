@model GroceriesStoreSystem.Models.ProductCategory

@{
    ViewData["Title"] = "EditCategory";
    Layout = "_Layout";
}
<style>
    .center {
        margin: auto;
        width: 80%;
        border: 3px solid #73AD21;
        padding: 10px;
        padding-top: 2rem;
        position: relative;
        top: 10%;
    }

    .control-label {
        font-weight: bold;
        padding-top: 1rem;
    }

    #submitButton {
        width: 20%;
        position: relative;
        top: 1rem
    }

    #submit {
        text-align: center;
    }
    /*this is for form-group expanding*/
    @@media (min-width:576px) {
        .form-group {
            width: 100%;
        }
    }

    @@media (min-width:776px) {
        .form-group {
            width: 300%;
        }
    }

    @@media (min-width:976px) {
        .form-group {
            width: 305%;
        }
    }

    @@media (min-width:4000px) {
        .form-group {
            width: 305%;
        }
    }
    .form-group {
        padding-left: 1rem;
    }
</style>
