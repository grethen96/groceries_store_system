@* *************************************************************************************   *@
@*----------- spinner -------------*@
<div class="spinner" style="display:none">
    <div class="center-div">
        <div class="inner-div">
            <div class="loader"></div>
        </div>
    </div>
</div>

<div class="center">
    <h1 style="text-align: center;">Change Category Information</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditCategory" method="POST" id="form" name="Form" enctype="multipart/form-data" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @* ----  hidden elements ------*@
                <input type="hidden" asp-for="CategoryId" />
                              
                <!-- Load here the page  ----------------------------------------->
                <div class="mine">
                    <div class="form-group">
                        <label asp-for="CategoryName" class="control-label">Add Category Name:</label>
                        <input type="text" asp-for="CategoryName" class="form-control" required />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IsActive" class="control-label">Active Category:</label>
                        <input asp-for="IsActive" type="checkbox" class="form-check-input" id="IsActive" name="IsActive" value="true">
                        <input asp-for="IsActive" name="IsActive" type="hidden" value="false">
                    </div>

                </div>
                <div class="form-group" id="submit">
                    <input type="button" id="submitButton" class="btn btn-primary" asp-controller="Home" asp-action="EditCategory" value="Save Changes" onclick="return submitAction('form')" />
                    <div style="padding-top: 1rem; text-align:left;">
                        <a asp-controller="Home" asp-action="Index" onclick="return confirm('Are you sure you want to discard the changes?')">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
